<%- include('../../partials/header') %>

    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3 my-5">
                <div class="card card-body">
                    
                    <h4 class='mb-3'>Log in</h4>
                    <form action="/auth/login" method="post">
                        <div class="form-group">
                            <label for="email">Enter your email</label>
                            <input type="email" name="email" class="form-control <%= error.email ? 'is-invalid' : '' %>" id="email">
                            <div class="invalid-feedback">
                                <%= error.email %>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="password">Enter your password</label>
                            <input type="password" name="password" class="form-control <%= error.password ? 'is-invalid' : '' %>" id="password">
                            <div class="invalid-feedback">
                                <%= error.password && error.password %>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-primary">
                        </div>
                    </form>
                    <a href="/auth/signup" class='text-center'>Don't have an accunt? Create one</a>
                </div>
            </div>
        </div>
    </div>


    <%- include('../../partials/footer') %>

        </body>

        </html>