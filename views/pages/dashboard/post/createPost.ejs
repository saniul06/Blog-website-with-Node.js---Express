<%- include('../../../partials/header') %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/croppie/2.6.5/croppie.css">
    <div class="container">
        <div class="row">
            <div class="col-md-2">

            </div>
            <div class="col-md-10">
                <div class="row">
                    <div class="col-md-8 offset-md-1">
                        <div class="card card-body my-5">
                            <h4>
                                <%= title %>
                            </h4>
                            <form action="/posts/create-post" method="post" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="title">Enter your name</label>
                                    <input type="text" class="form-control" name="title" id="title"
                                        placeholder="Enter post title">
                                    <div class="invalid-feedback">
                                        <%= errors.name %>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="tiny-mce-post-body">Enter post description</label>
                                    <textarea class="form-control" name="body" id="tiny-mce-post-body"></textarea>
                                    <div class="invalid-feedback">
                                        <%= errors.bio %>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="tags">Enter your email</label>
                                    <input type="text" class="form-control" name="tags" id="tags"
                                        placeholder="tag1, tag2, tag3">
                                </div>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id="inputGroupFile">Upload</span>
                                        <div class="custom-fi">
                                            <input type="file" class="form-control" name="post-thumbnail">
                                            <label for="inputGroupFile">Choose file</label>
                                        </div>
                                    </div>
                                </div>
                                <input type="submit" class="btn btn-primary" value="Submit">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../../../partials/footer') %>
        </body>

        </html>